generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma-db-mongo/client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DATABASE_URL")
}

enum CallRole {
  HOST
  PARTICIPANT
}

enum messageType {
  TEXT
  FILE
}

model Chat {
  id        String      @id @default(cuid()) @map("_id")
  message   String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  role      CallRole
  type      messageType
}
